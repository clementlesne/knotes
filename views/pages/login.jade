extend ../templates/common/layout
block vars
	- var title = 'Login'
	- var navBarActiveId = 0
	- var pageClass = 'login'
	- var pageName = 'Login'

block pageButtons
	a(href='/account/signup').button Register ?
	a(href='/auth/facebook').button Login with facebook
	a(href='/auth/google').button Login with google

block content
	div.row
		div(class="6u -3u")
			section.card.login
				div.card__container
					form(action='/auth/local/login' method='POST').form__container
						div.card__content
							div.form
								fieldset.form__block
									legend Login
									div.form__block__sub
										input(type='text', name='username' placeholder='Username', required, autofocus)
										input(type='password', name='password' placeholder='Password', required)

						div.card__action
							div.button__container
								button(type='submit') Sign in